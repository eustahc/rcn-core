{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./lib",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "emitDeclarationOnly": true
    },
    "include": ["src/**/*"]
  }
  